{
  "window.titleBarStyle": "custom",
  "workbench.startupEditor": "newUntitledFile",
  //editor font
  "editor.fontFamily": "Fira Code",
  "editor.lineHeight": 25,
  "editor.fontSize": 17,
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  //editor
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "html.format.wrapAttributesIndentSize": 0,
  "html.format.wrapLineLength": 150,
  "html.format.unformattedContentDelimiter": "0",
  "html.format.indentInnerHtml": true,
  "html.format.endWithNewline": true,
  // terminal setting
  "terminal.integrated.fontFamily": "MesloLGS NF",
  //live server
  "liveServer.settings.donotShowInfoMsg": true,
  //blade
  "blade.format.enable": true,
  "emmet.triggerExpansionOnTab": true,
  "[blade]": {
    "editor.autoClosingBrackets": "always",
    "editor.defaultFormatter": "onecentlin.laravel-blade"
  },
  //html
  "[html]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": false
    },
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  //dart
  "dart.previewLsp": true,
  "dart.previewFlutterUiGuidesCustomTracking": true,
  "dart.previewHotReloadOnSaveWatcher": true,
  "dart.previewFlutterUiGuides": true,
  "dart.openDevTools": "flutter",
  //php
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  //autorename tag
  "auto-rename-tag.activationOnLanguage": [
    "html",
    "xml",
    "php",
    "javascript",
    "python"
  ],
  "auto-close-tag.activationOnLanguage": [
    "xml",
    "php",
    "blade",
    "ejs",
    "jinja",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "plaintext",
    "markdown",
    "vue",
    "liquid",
    "erb",
    "lang-cfml",
    "cfml",
    "HTML (EEx)",
    "HTML (Eex)",
    "plist"
  ],
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  "[dart]": {
    "editor.defaultFormatter": "Dart-Code.dart-code"
  },
  // power mode
  "powermode.enabled": true,
  // icons vs code
  "vsicons.dontShowNewVersionMessage": true,
  // discord
  "discord.suppressNotifications": true,
  "terminal.integrated.cursorStyle": "line",
  "workbench.iconTheme": "vscode-icons",
  "editor.cursorBlinking": "expand",
  "files.autoSave": "afterDelay",
  "discord.removeRemoteRepository": true,
  "workbench.productIconTheme": "fluent-icons",
  "workbench.colorTheme": "Community Material Theme Darker"
}
